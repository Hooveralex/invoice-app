<%= form_for([@invoice, @invoice.items.build]) do |f| %>
	<div class="mdl-textfield mdl-js-textfield">
		<%= f.label :date %><br>
		<%= date_select :item, :date, class: "form-control" %>
	</div>
	<div class="mdl-textfield mdl-js-textfield">
		<%= f.label :matter_id %><br>
		<%= f.select(:matter_id) do %>
		  <% @matters.each do |matter| %>
		    <%= content_tag(:option, matter.name, value: matter.id) %>
		  <% end %>
		<% end %>
	</div>
	<div class="mdl-textfield mdl-js-textfield">
		<%= f.label :desc, "Description", class: "mdl-textfield__label" %><br>
		<%= f.text_field :desc, class: "mdl-textfield__input" %>
	</div>
	<div class="mdl-textfield mdl-js-textfield">
		<%= f.label :hours, class: "mdl-textfield__label" %><br>
		<%= f.text_field :hours, class: "mdl-textfield__input", pattern: "-?[0-9]*(\.[0-9]+)?" %>
		<span class="mdl-textfield__error">Input is not a number!</span>
	</div>
	<%= f.submit class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
<% end %>