<%= form_for([@invoice, @invoice.items.build]) do |f| %>
	<div class="form-inline form-justified">
		<div class="form-group">
			<%= f.label :date %><br>
			<%= date_select :item, :date, class: "form-control" %>
		</div>
			
		<div class="form-group">
			<%= f.label :matter_id %><br>
			<%= f.select(:matter_id) do %>
			  <% @matters.each do |matter| %>
			    <%= content_tag(:option, matter.name, value: matter.id) %>
			  <% end %>
			<% end %>
		</div>
			
		<div class="form-group">
			<%= f.label :desc %><br>
			<%= f.text_field :desc, class: "form-control" %>
		</div>
			
		<div class="form-group">
			<%= f.label :hours %><br>
			<%= f.text_field :hours, class: "form-control" %>
			<%= f.submit %>
		</div>
	</div>
<% end %>