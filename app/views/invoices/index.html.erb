<h1>Invoices</h1>
 
<table class="table table-hover table-responsive">
  <tr>
    <th>ID</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
  <% @invoices.each do |invoice| %>
    <tr>
      <td><%= invoice.id %></td>
      <td><%= invoice.start_date.to_formatted_s(:long) %></td>
      <td><%= invoice.end_date.to_formatted_s(:long) %></td>
      <td><%= link_to 'View', invoice_path(invoice) %></td>
      <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
      <td>
        <%= link_to 'Delete', invoice_path(invoice),
          method: :delete,
          data: {confirm: "Are you sure?"} %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Invoices', new_invoice_path %>