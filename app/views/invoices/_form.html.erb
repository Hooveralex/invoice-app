<!-- Even though this form will be used in different context (new, edit), rails is smart enough to understand that @invoice should be used differently in teh different contexts. Normally, you would have to specify a different url and method for each context. -->
<%= form_for @invoice do |f| %>
  <% if @invoice.errors.any? %>
    <div id="errors-explanation">
      <h2>
        <% pluralize(@invoice.errors.count, "error") %>
        prohibited this article from being saved:
      </h2>
      <ul>
        <% @invoice.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :start_date %><br>
    <%= date_select :invoice, :start_date %>
  </p>

  <p>
    <%= f.label :end_date %><br>
    <%= date_select :invoice, :end_date %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>