<div class="row">
	<div class="col-md-6">
		<h1>
			<ol class="breadcrumb">
			  <li><%= link_to "Invoices", invoices_path %></li>
			  <li class="active">Invoice #<%= @invoice.id %></li>
			</ol>
		</h1>
	</div>
	<div class="col-md-6">
		<div class="row">
			<div class="col-md-12">
				<%= render "shared/stats" %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<%= link_to '<i class="fa fa-file-pdf-o"></i> Download Invoice'.html_safe, download_invoice_path(@invoice, :format => :pdf), class: "btn btn-primary pull-right" %>
			</div>
		</div>
	</div>
</div>
<p><%= @invoice.start_date.to_formatted_s(:long) %> - <%= @invoice.end_date.to_formatted_s(:long) %> <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_invoice_path(@invoice) %></p>
<hr>


<div class="row">
	<div class="col-md-12 text-center">
		<h2>Time Entries</h2>
		<%= render 'items/form' %>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<table class="table table-hover table-responsive">
			<thead>
				<tr>
					<th>Date</th>
					<th>Matter</th>
					<th>Description</th>
					<th>Hours</th>
				</tr>
			</thead>
			<tbody>
				<!-- This calls the _item partial -->
				<%= render @invoice.items %>	
			</tbody>
		</table>
	</div>	
</div>
<hr>
<div class="row">
	<div class="col-md-12 text-center">
		<h2>Expenses</h2>
		<%= render 'expenses/form' %>
	</div>
</div>
<div class="row">
		<div class="col-md-12">
			<table class="table table-hover table-responsive">
				<thead>
					<tr>
						<th>Matter</th>
						<th>Description</th>
						<th>Amount</th>
					</tr>
				</thead>
				<tbody>
					<!-- This calls the _expense partial -->
					<%= render @invoice.expenses %>	
				</tbody>
			</table>
		</div>
	</div>
