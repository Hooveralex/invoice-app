<%= form_for @matter do |f| %>
  <% if @matter.errors.any? %>
    <div id="errors-explanation">
      <h2>
        <% pluralize(@matter.errors.count, "error") %>
        prohibited this article from being saved:
      </h2>
      <ul>
        <% @matter.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>