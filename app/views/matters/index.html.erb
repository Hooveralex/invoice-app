<div class="mdl-grid">
	<div class="mdl-cell mdl-cell--12-col">
		<h1>Matters</h1>
		<%= form_for @matter do |f| %>
		    <div class="mdl-textfield mdl-js-textfield">
		    	<%= f.label :name, class: "mdl-textfield__label" %>
		    	<%= f.text_field :name, class: "mdl-textfield__input" %>
		    </div>
		    <%= f.submit "Add", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
		<% end %>
		<table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
			<thead>
				<tr>
					<th>Id</th>
					<th class="mdl-data-table__cell--non-numeric">Name</th>
					<th class="mdl-data-table__cell"></th>
					<th class="mdl-data-table__cell"></th>
				</tr>
			</thead>
			<tbody>
				<% @matters.each do |matter| %>
					<tr>
						<td class="mdl-data-table__cell"><%= matter.id %></td>
						<td class="mdl-data-table__cell--non-numeric"><%= matter.name %></td>
						<td class="mdl-data-table__cell--non-numeric"><%= link_to "Edit", edit_matter_path(matter) %></td>
						<td class="mdl-data-table__cell--non-numeric">
							<%= link_to 'Delete', matter_path(matter),
							  method: :delete,
							  data: {confirm: "Are you sure?"} %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
