<h1><%= @today_format %> <small><%= render "shared/stats" %></small></h1>
<p><%= link_to "Invoice #{@invoice.id} (#{@invoice.start_date.to_formatted_s(:long)} - #{@invoice.end_date.to_formatted_s(:long)})", invoice_path(@invoice) %></p>
<hr>
<div class="row">
	<div class="col-md-offset-2 col-md-10">
		<%= render 'items/form' %>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<h2>Time Entries</h2>
		<table class="table table-hover table-responsive">
			<thead>
				<tr>
					<th>Date</th>
					<th>Matter</th>
					<th>Description</th>
					<th>Hours</th>
				</tr>
			</thead>
			<tbody>
				<% @items.each do |item| %>
					<tr>
						<td><%= item.date %></td>
						<td><%= item.matter.name if item.matter %></td>
						<td><%= item.desc %></td>
						<td><%= item.hours %></td>
						<td><%= link_to "Delete", [item.invoice, item],
								method: :delete,
								data: { confirm: "Are you sure?"} %>
						</td>
					</tr>
				<% end %>	
			</tbody>
		</table>
	</div>
</div>