<%= form_for @user do |f| %>
	<% if @user.errors.any? %>
		<div id="errors-explanation">
			<h2>
				<% pluralize(@user.errors.count, "error") %>
				prohibited this article from being saved:
			</h2>
			<ul>
				<% @user.errors.full_messages.each do |msg| %>
				  <li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="mdl-grid">
		<div class="mdl-cell mdl-cell--4-col">
			<div class="mdl-card mdl-shadow--2dp sign-up">
			  <div class="mdl-card__title mdl-card--expand">
			    <h2 class="mdl-card__title-text">Basics</h2>
			  </div>
			  <div class="mdl-card__supporting-text">
			    <div class="mdl-textfield mdl-js-textfield">
					<%= f.label :name, class: "mdl-textfield__label" %>
					<%= f.text_field :name, class: "mdl-textfield__input" %>
				</div>
			
				<div class="mdl-textfield mdl-js-textfield">
					<%= f.label :email, class: "mdl-textfield__label" %>
					<%= f.email_field :email, class: "mdl-textfield__input" %>
				</div>
			
				<div class="mdl-textfield mdl-js-textfield">
					<%= f.label :password, class: "mdl-textfield__label" %>
					<%= f.password_field :password, class: "mdl-textfield__input" %>
				</div>
			
				<div class="mdl-textfield mdl-js-textfield">
					<%= f.label :password_confirmation, "Confirmation", class: "mdl-textfield__label" %>
					<%= f.password_field :password_confirmation, class: "mdl-textfield__input" %>
				</div>
			  </div>
			</div>
		</div>
		
		<div class="mdl-cell mdl-cell--4-col">
			<div class="mdl-card mdl-shadow--2dp sign-up">
			  <div class="mdl-card__title mdl-card--expand">
			    <h2 class="mdl-card__title-text">Where You Live?</h2>
			  </div>
			  <div class="mdl-card__supporting-text">
			    <div class="mdl-textfield mdl-js-textfield">
					<%= f.label :address, class: "mdl-textfield__label" %>
					<%= f.text_field :address, class: "mdl-textfield__input" %>
				</div>
			
				<div class="mdl-textfield mdl-js-textfield">
					<%= f.label :address2, "Address 2", class: "mdl-textfield__label" %>
					<%= f.text_field :address2, class: "mdl-textfield__input" %>
				</div>
			
				<div class="mdl-textfield mdl-js-textfield">
					<%= f.label :city, class: "mdl-textfield__label" %>
					<%= f.text_field :city, class: "mdl-textfield__input" %>
				</div>
			
				<div class="mdl-textfield mdl-js-textfield">
					<%= f.label :state, class: "mdl-textfield__label" %>
					<%= f.text_field :state, class: "mdl-textfield__input" %>
				</div>
			
				<div class="mdl-textfield mdl-js-textfield">
					<%= f.label :zip, class: "mdl-textfield__label" %>
					<%= f.text_field :zip, class: "mdl-textfield__input" %>
				</div>
			  </div>
			</div>
		</div>
		
		<div class="mdl-cell mdl-cell--4-col">
			<div class="mdl-card mdl-shadow--2dp sign-up">
			  <div class="mdl-card__title mdl-card--expand">
			    <h2 class="mdl-card__title-text">Money Stuff</h2>
			  </div>
			  <div class="mdl-card__supporting-text">
			    <div class="mdl-textfield mdl-js-textfield">
					<%= f.label :rate, class: "mdl-textfield__label" %>
					<%= f.text_field :rate, class: "mdl-textfield__input" %>
				</div>
				<%= f.submit "Create my account", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
			  </div>
			</div>
		</div>
	</div>
<% end %>